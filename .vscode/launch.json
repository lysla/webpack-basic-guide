  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Webpack",
      // Same as running webpack-dev-server with npm
      "program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome",
      "url": "http://localhost:8080"
    }
  ],
  "compounds": [
    {
      "name": "Launch Project",
      "configurations": ["Webpack", "Chrome"]
    }
  ]
}
